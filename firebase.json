{
  "hosting": {
    "public": "public",   // Thư mục chứa mã nguồn web (thường là "public")
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "cors": [
      {
        "origin": ["http://localhost:5173"],
        "method": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
        "maxAgeSeconds": 3600,
        "responseHeader": ["Content-Type"]
      }
    ]
  }
}
